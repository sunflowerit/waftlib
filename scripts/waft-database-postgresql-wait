#!/usr/bin/env bash
# Version: v.23.08.03

SCRIPT_PATH="$(cd "$(/usr/bin/dirname "${0}")" && /bin/pwd)"
ODOO_WORK_DIRECTORY="$(cd "${SCRIPT_PATH}/.." && /bin/pwd)"
. "${ODOO_WORK_DIRECTORY}/config/env-default" && \
. "${ODOO_WORK_DIRECTORY}/config/env-shared" && \
. "${ODOO_WORK_DIRECTORY}/.env-secret" && \
cd "${ODOO_WORK_DIRECTORY}"

if [ "${WAFT_WAIT_DB,,}" != 'true' ] ; then
    /bin/echo "( WARNING ) '${ODOO_WORK_DIRECTORY}/scripts/waft-database-postgresql-wait' script: Not waiting for a postgres server."
    exit 0
fi

/bin/echo "( INFO ) '${ODOO_WORK_DIRECTORY}/scripts/waft-database-postgresql-wait' script: Waiting until postgres is listening at ${PGHOST}..."
while true; do
    /usr/bin/psql --list > /dev/null 2>&1 && break
    sleep 1
done
